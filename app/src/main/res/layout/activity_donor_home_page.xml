<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorHomePage">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donationTypeDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:endIconMode="dropdown_menu"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundColor="@android:color/transparent"
        app:startIconDrawable="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/donationTypeAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donation Type"
            android:fontFamily="@font/comfortaa"
            android:background="@drawable/border_background"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ScrollView to make the fetched item display scrollable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/donationTypeDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView to display organization's name -->
            <TextView
                android:id="@+id/organizationNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Name"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- TextView to display organization's category -->
            <TextView
                android:id="@+id/organizationCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Category"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- TextView to display organization's description -->
            <TextView
                android:id="@+id/organizationDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Description"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
